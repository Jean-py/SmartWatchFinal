<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="s8.projetsmartwatch"
    >

    <uses-feature android:name="android.hardware.type.watch" />


    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission        android:name="android.permission.VIBRATE"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">
        <uses-library
            android:name="com.google.android.wearable"
            android:required="false"
        />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.DeviceDefault.Light"
            android:noHistory="true"
            android:launchMode="singleTop"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".tapping_gesture.activity.TappingGestureActivityAlarme"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.DeviceDefault.Light"
            android:noHistory="true"
            android:launchMode="singleTop">

        </activity>
        <activity
            android:name=".tapping_gesture.activity.TappingGestureActivityAreUOK"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.DeviceDefault.Light"
            android:noHistory="true"
            android:launchMode="singleTop">

        </activity>
        <activity
            android:name=".tapping_gesture.activity.TappingGestureActivityP2ok"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.DeviceDefault.Light"
            android:noHistory="true"
            android:launchMode="singleTop">

        </activity>
    </application>

</manifest>

